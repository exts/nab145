					<form method="post" action="">
						<table class="forum" cellspacing="1" cellpadding="0" width="100%">
							<tr>
								<td colspan="2" class="category"><div class="cat_title">Update Profile</div></td>
							</tr>
							<tr>
								<td colspan="2" class="small_title"><span>Modify your profile.</span></td>
							</tr>
							<tr>
								<td width="20%" class="common"><b>Avatar</b>:</td>
								<td width="80%" class="common"><input type="text" value="{AVY}" name="avy" /></td>
							</tr>
							<tr>
								<td width="20%" class="common"><b>AIM</b>:</td>
								<td width="80%" class="common"><input type="text" value="{AIM}" name="aim" /></td>
							</tr>
							<tr>
								<td width="20%" class="common"><b>MSN</b>:</td>
								<td width="80%" class="common"><input type="text" value="{MSN}" name="msn" /></td>
							</tr>
							<tr>
								<td width="20%" class="common"><b>ICQ</b>:</td>
								<td width="80%" class="common"><input type="text" value="{ICQ}" name="icq" /></td>
							</tr>
							<tr>
								<td width="20%" class="common"><b>Signature</b>:</td>
								<td width="80%" class="common"><textarea name="siggy" cols="30" common="3">{SIG}</textarea></td>
							</tr>
							<tr>
								<td width="20%" class="common"><b>TimeZone</b>:</td>
								<td width="80%" class="common">
									<select name='timezone'>
										{TIMEZONE}
									</select>
								</td>
							</tr>
							<tr><td colspan="4" class="common"><input type="submit" style="border:none;background: #FFFFFF;" name="updatepro" value="Update Profile!" /></td></tr>		
						</table>
					</form>